<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Repository detail text view theme -->
    <style name="RepositoryDetailTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_bottom</item>
        <item name="android:paddingStart">@dimen/text_view_padding_start</item>
        <item name="android:paddingEnd">@dimen/text_view_padding_end</item>
    </style>

</resources>
